{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "allowJs": true,
    "noEmit": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*", "*"],
      "src/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@services/*": ["src/services/*"]
    }
  },
  "include": [
    "App.tsx",
    "src",
    "src/components",
    "src/services",
    "__tests__",
    "index.js",
    "server.js",
    "widgets"
  ]
}
